extends:
    - airbnb
parserOptions:
    ecmaVersion: 2017
rules:
    computed-property-spacing:
        - error
        - always
    space-in-parens:
        - error
        - always
    padded-blocks:
        - error
        - always
    array-bracket-spacing:
        - error
        - always
    quotes:
        - error
        - double
    max-len:
        - warn
        - 150
    eol-last: 0
    indent:
        - error
        - 4
    import/no-extraneous-dependencies: 0
    no-bitwise:
        - error
        - allow:
            - "~"
    no-plusplus: 0
    comma-dangle: 0
    no-multi-assign: 0
    valid-jsdoc:
        - error
    no-restricted-syntax: 0
    import/no-unresolved: 0
    import/extensions: 0
    react/jsx-indent:
        - error
        - 4
    react/forbid-prop-types: 0